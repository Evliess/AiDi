<!--pages/add-vip/add-vip.wxml-->
<navigation-bar></navigation-bar>
<view class="container" style="padding: 4px;" scroll-y type="custom">
  <view class="title">
    <view>AIDI 新增会员</view>
  </view>
  <view class="card">
    <view class="card-header">
      <p class="card-title">新增会员</p>
    </view>
    <view class="form-group">
      <label class="form-label" for="name">会员昵称</label>
      <input type="text" class="form-input" placeholder="请输入会员昵称" value="{{user.name}}" bindinput="onNameChange"></input>
    </view>
    <view class="form-group">
      <label class="form-label" for="phone">会员号</label>
      <input type="text" class="form-input" placeholder="请输入会员号" value="{{user.phone}}" bindinput="onPhoneChange"></input>
    </view>
    <view class="form-group">
      <label class="form-label" for="money">充值金额</label>
      <input type="digit" class="form-input" placeholder="请输入充值金额" value="{{user.money}}" bindinput="onMoneyChange"></input>
    </view>

    <view class="form-group">
      <radio-group bindchange="onRadioChange">
        <label class="form-label" for="type-1">会员类型</label>
        <label wx:for="{{items}}" wx:key="value">
          <radio value="{{item.value}}" checked="{{selectedValue === item.value}}" /> {{item.name}}
        </label>
      </radio-group>
    </view>
    <view wx:if="{{selectedValue=='day'}}" class="form-group">
      <label class="form-label" for="round">剩余次数</label>
      <input type="number" class="form-input" placeholder="请输入剩余次数" value="{{user.leftCount}}" bindinput="onLeftCountChange"></input>
    </view>
    <view wx:if="{{selectedValue!='day'}}" class="form-group">
      <label class="form-label" for="round">有效日期</label>
      <input type="text" class="form-input" placeholder="请输入有效日期" value="{{user.expiredAt}}" bindinput="onExpiredAtChange"></input>
    </view>
    <view class="card-buttons">
      <button class="btn btn-primary" bind:tap="confirm">确认</button>
      <button class="btn btn-outline" bind:tap="reset">重置</button>
    </view>
  </view>

</view>