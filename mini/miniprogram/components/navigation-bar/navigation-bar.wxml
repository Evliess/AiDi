<!-- 自定义顶部栏 -->
<view class="nav-bar" style="height:{{navBarHeight}}px;">
  <view class="search" placeholder="输入关键词！" style="height:{{menuHeight}}px; width: {{menuWidth}}px; min-height:{{menuHeight}}px; line-height:{{menuHeight}}px; left:{{menuRight}}px; top:{{menuTop}}px;">
    <navigator open-type="navigateBack" class="back-btn" bind:tap="goHome">
      <image src="/images/home.png" class="icon-img"></image>
    </navigator>
    <navigator open-type="navigateBack" class="back-btn" bind:tap="goBack">
      <image src="/images/return.png" class="icon-img-right"></image>
    </navigator>
  </view>

</view>

<!-- 占位，高度与顶部栏一样 -->
<view style="height:{{navBarHeight}}px;"></view>