<!--pages/add-vip/add-vip.wxml-->
<navigation-bar></navigation-bar>
<view class="container" style="padding: 4px;" scroll-y type="custom">
  <view class="title">
    <view>AIDI 会员充值</view>
  </view>

  <view class="card">
    <view class="card-header">
      <p class="card-title">会员充值</p>
    </view>
    <view class="form-group">
      <label class="form-label" for="phone">会员号</label>
      <input type="text" class="form-input" placeholder="请输入会员号" bindinput="onPhoneChange" value="{{user.phone}}"></input>
    </view>
    <view class="card-buttons">
      <button class="btn btn-outline" bind:tap="find">查找</button>
      <button class="btn btn-primary" bind:tap="clearData">重置</button>
    </view>
    <view wx:if="{{user.name}}" class="form-group" style="margin-top: 6px;">
      <view>
        <text class="">会员昵称: {{user.name}}</text>
        <text class="text-class">会员类型: <text class="type">{{user.chineseType}}</text></text>
        <text wx:if="{{user.score}}" class="text-class">会员积分: {{user.score}}</text>
      </view>
      <view>
        <text class="">充值日期: {{user.oldChargeAt}}</text>
        <text wx:if="{{user.oldType=='day'}}" class="form-label">剩余次数: {{user.oldLeftCount}}</text>
        <text wx:if="{{user.oldType!='day'}}" class="form-label">到期日期: <text class="type">{{user.oldExpiredAt}}</text></text>
      </view>
    </view>
  </view>
  <view class="card">
    <view class="card-header">
      <p class="card-title">充值</p>
    </view>
    <view class="form-group">
      <label class="form-label" for="money">充值金额</label>
      <input type="digit" class="form-input" placeholder="请输入充值金额" bindinput="onMoneyChange" value="{{user.money}}"></input>
    </view>

    <view class="form-group">
      <label class="form-label" for="round">充值日期</label>
      <input type="text" class="form-input" placeholder="例如：2025/01/12" bindinput="onChargeAtChange" value="{{user.chargeAt}}"></input>
    </view>

    <view class="form-group">
      <radio-group bindchange="onRadioChange">
        <label class="form-label" for="type-1">会员类型</label>
        <label wx:for="{{items}}" wx:key="value">
          <radio value="{{item.value}}" checked="{{selectedValue === item.value}}" /> {{item.name}}
        </label>
      </radio-group>
    </view>
    <view wx:if="{{selectedValue=='day'}}" class="form-group">
      <label class="form-label" for="round">剩余次数</label>
      <input type="number" class="form-input" placeholder="请输入剩余次数" bindinput="onLeftCountChange" value="{{user.leftCount}}"></input>
    </view>
    <view wx:if="{{selectedValue!='day'}}" class="form-group">
      <label class="form-label" for="round">有效日期</label>
      <input type="text" class="form-input" placeholder="例如：2025/01/12" bindinput="onExpiredAtChange" value="{{user.expiredAt}}"></input>
    </view>
    <view class="card-buttons">
      <button class="btn btn-primary" style="visibility: hidden;">重置</button>
      <button class="btn btn-outline" bind:tap="confirm">确认</button>
    </view>
  </view>

</view>